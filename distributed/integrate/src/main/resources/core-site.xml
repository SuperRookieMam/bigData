<!-- Put site-specific property overrides in this file. -->

<configuration>
   
  <property>
    <name>fs.defaultFS</name>
    <value>hdfs://master:9000</value>
    <description>指定namenode地址，那台地址时老大 </description>
  </property>
  <property>
    <name>hadoop.tmp.dir</name>
    <value>file:/usr/local/usrData/hadoop</value>
    <description>指定hadoop产生的文件存放位置，更多详情参考官方文档</description>
  </property>

  <property>
    <name>io.file.busffer.size</name>
    <value>131072</value>
    <description>属性指定：读写缓存size设定</description>
  </property>

</configuration>
